---
import "../styles/global.css";

import FooterComponents from "../components/FooterComponents.astro";

import HeaderComponents from "../components/HeaderComponents.astro";

import { fetchFromAPI } from "../lib/strapi";

import { Image } from "astro:assets";

import chileFemeninoImg from "../images/chile-femenino.png";

interface NoticiaDeportiva {
  id: number;

  documentId: string;

  titulo: string;

  descripcion: string;

  fecha: string;

  autor: string;
}

const noticiasData = (await fetchFromAPI("noticiadeportivas")) as
  | NoticiaDeportiva[]
  | null;

const noticias: NoticiaDeportiva[] = Array.isArray(noticiasData)
  ? noticiasData
  : [];

const tituloBuscado =
  "Tras valioso triunfo de La Roja: asi quedo la tabla de Liga de Naciones Femenina rumbo a Brasil 2027";

const noticiaDestacada: NoticiaDeportiva | undefined = noticias.find(
  (noticia) => noticia.titulo === tituloBuscado
);
---

<div class="min-h-screen bg-gray-50">
  <HeaderComponents />

  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="mb-4">
      <div class="flex flex-col"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        noticiaDestacada ? (
          <div class="flex flex-col col-span-full">
            {" "}
            <a class="group block">
              <div class="mb-6 relative  w-full overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={chileFemeninoImg}
                  alt={noticiaDestacada.titulo}
                  class=" object-cover transition-transform "
                />
              </div>
              <p class="text-xs text-red-600 font-medium mb-2">
                {noticiaDestacada.autor}{" "}
                <span class="text-gray-500">- {noticiaDestacada.fecha}</span>{" "}
              </p>{" "}
              <h3 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight mb-4">
                {noticiaDestacada.titulo}{" "}
              </h3>{" "}
              <p class="mt-2 text-lg leading-relaxed text-gray-700 whitespace-pre-line">
                {noticiaDestacada.descripcion}
              </p>{" "}
            </a>{" "}
          </div>
        ) : (
          <p class="col-span-4 text-center text-gray-500 py-10">
            No se encontr√≥ la noticia: {tituloBuscado}{" "}
          </p>
        )
      }
    </div>
  </div>

  <FooterComponents />
</div>
