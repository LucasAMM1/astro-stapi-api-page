---
import "../styles/global.css";
import Image from "astro/components/Image.astro";

import ChileFemeninoImg from "../images/chile-femenino.png";
import BarcelonaImg from "../images/barcelona-atm.png";
import CortesImg from "../images/brayancortes.png";
import ManCityImg from "../images/mancity.png";

const { Deportivas_1, Deportivas_2, Deportivas_3, Deportivas_4 } = Astro.props;
---

<div class="container mx-auto px-4 py-8 max-w-7xl">
  <div class="mb-4">
    <div class="flex flex-col">
      <h2 class="text-xl font-semibold text-gray-800">Noticias Deportivas</h2>
      <div class="relative w-full h-1 bg-gray-200 mt-2 mb-4">
        <div class="absolute top-0 left-0 h-1 w-1/4 bg-red-600"></div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="flex flex-col">
      <a href="Deportivas_1" class="group block">
        <Image
          src={ChileFemeninoImg}
          alt="Noticia sobre Chile Femenino"
          class="h-40 w-full object-cover mb-3 rounded"
        />

        <p class="text-xs text-red-600 font-medium mb-1">
          Javier Zamorano <span class="text-gray-500"
            >- 03 diciembre de 2025</span
          >
        </p>

        <h3
          class="text-base font-semibold text-gray-800 leading-snug group-hover:text-red-600"
        >
          Tras valioso triunfo de La Roja: asi quedo la tabla de Liga de
          Naciones Femenina rumbo a Brasil 2027
        </h3>
      </a>
    </div>

    <div class="flex flex-col">
      <a href="Deportivas_2" class="group block">
        <Image
          src={BarcelonaImg}
          alt="Noticia sobre Barcelona"
          class="h-40 w-full object-cover mb-3 rounded"
        />

        <p class="text-xs text-red-600 font-medium mb-1">
          Italo Sanchez Sanhueza <span class="text-gray-500"
            >- 02 diciembre de 2025</span
          >
        </p>

        <h3
          class="text-base font-semibold text-gray-800 leading-snug group-hover:text-red-600"
        >
          Barcelona le remonto al Atletico y presiona al Madrid por liderato de
          LaLiga: cules toman distancia
        </h3>
      </a>
    </div>

    <div class="flex flex-col">
      <a href="Deportivas_4" class="group block">
        <Image
          src={CortesImg}
          alt="Noticia sobre Brayan CortÃ©s"
          class="h-40 w-full object-cover mb-3 rounded"
        />

        <p class="text-xs text-red-600 font-medium mb-1">
          Italo Sanchez Sanhueza <span class="text-gray-500"
            >- 02 diciembre de 2025</span
          >
        </p>

        <h3
          class="text-base font-semibold text-gray-800 leading-snug group-hover:text-red-600"
        >
          Manchester City vence a Fulham en frenetico duelo de 9 goles: Haaland
          sello historica marca en Premier
        </h3>
      </a>
    </div>

    <div class="flex flex-col">
      <a href="Deportivas_3" class="group block">
        <Image
          src={ManCityImg}
          alt="Noticia sobre Manchester City"
          class="h-40 w-full object-cover mb-3 rounded"
        />

        <p class="text-xs text-red-600 font-medium mb-1">
          Jaime Zavala <span class="text-gray-500">- 02 diciembre de 2025</span>
        </p>

        <h3
          class="text-base font-semibold text-gray-800 leading-snug group-hover:text-red-600"
        >
          En Uruguay le ponen la lapida al futuro de Brayan Cortes en el
          "manya": "Nunca pudo afianzarse"
        </h3>
      </a>
    </div>
  </div>
</div>
